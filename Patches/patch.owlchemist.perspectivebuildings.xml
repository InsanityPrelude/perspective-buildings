<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li MayRequire="dubwise.dubsbadhygiene" Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName="WindPump" or @Name="BasedCeilingFan" or defName="WaterTrough" or defName="BathtubStuff"]</xpath>
				<value>
					<li Class="Perspective.Ignore" />
				</value>
			</li>
			<li MayRequire="oskarpotocki.vanillafactionsexpanded.core" Class="PatchOperationAddModExtension">
				<success>Always</success>
				<xpath>/Defs/ThingDef[comps and comps[li[@Class="VanillaFurnitureExpanded.CompProperties_MountableOnWall"]]]</xpath>
				<value>
					<li Class="Perspective.Ignore" />
				</value>
			</li>
			<!-- Give chairs 4-way offset -->
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>/Defs/ThingDef[building and building[isSittable="true"]]/comps[not(li[@Class="Perspective.CompProperties_Offsetter"])]</xpath>
				<value>
					<li Class="Perspective.CompProperties_Offsetter">
						<offsets>
							<li>(0, 0, 0.2)</li>
							<li>(0, 0, -0.2)</li>
							<li>(0.2, -0.05, 0)</li>
							<li>(-0.2, -0.05, 0)</li>
						</offsets>
					</li>
				</value>
			</li>
			<!-- Add mirror ignore (default bool is false) -->
			<li Class="PatchOperationAddModExtension">
				<success>Always</success>
				<xpath>/Defs/ThingDef[defName="Column" or 
					defName="Skullspike" or 
					defName="PlantPot" or 
					defName="PlantPot_Bonsai" or 
					defName="Chemlamp" or 
					defName="TorchLamp" or 
					defName="Brazier" or 
					defName="TableCircular"]</xpath>
				<value>
					<li Class="Perspective.Mirror" />
				</value>
			</li>
		</operations>
	</Operation>
</Patch>